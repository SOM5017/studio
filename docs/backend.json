
{
  "entities": {
    "AdminUser": {
      "$schema": "http://json-schema.org/draft-07/schema#",
      "title": "Admin User",
      "type": "object",
      "description": "Represents an administrator user account.",
      "properties": {
        "username": {
          "type": "string",
          "description": "The public username for the admin."
        },
        "email": {
          "type": "string",
          "format": "email",
          "description": "The email associated with the Firebase Auth account."
        }
      },
      "required": ["username", "email"]
    },
    "Booking": {
      "$schema": "http://json-schema.org/draft-07/schema#",
      "title": "Booking",
      "type": "object",
      "description": "Represents a booking made by a customer.",
      "properties": {
        "id": {
          "type": "string",
          "description": "Unique identifier for the Booking."
        },
        "startDate": {
          "type": "string",
          "description": "The start date of the booking (ISO string).",
          "format": "date-time"
        },
        "endDate": {
          "type": "string",
          "description": "The end date of the booking (ISO string).",
          "format": "date-time"
        },
        "fullName": {
          "type": "string",
          "description": "The full name of the customer."
        },
        "mobileNumber": {
          "type": "string",
          "description": "The mobile number of the customer."
        },
        "address": {
          "type": "string",
          "description": "The address of the customer."
        },
        "numberOfGuests": {
          "type": "number",
          "description": "The number of guests for the booking."
        },
        "namesOfGuests": {
          "type": "string",
          "description": "Names of the guests in the booking."
        },
        "paymentMethod": {
          "type": "string",
          "enum": ["gcash", "cash"]
        },
        "status": {
          "type": "string",
          "enum": ["pending", "confirmed", "cancelled"]
        },
        "isFraudulent": {
            "type": "boolean"
        },
        "fraudulentReason": {
            "type": "string"
        },
        "createdAt": {
          "type": "string",
          "format": "date-time",
          "description": "Timestamp of when the booking was created."
        },
        "updatedAt": {
          "type": "string",
          "format": "date-time",
          "description": "Timestamp of when the booking was last updated."
        }
      },
      "required": [
        "startDate",
        "endDate",
        "fullName",
        "mobileNumber",
        "address",
        "numberOfGuests",
        "namesOfGuests",
        "paymentMethod",
        "status"
      ]
    }
  },
  "auth": {
    "providers": [
      "password"
    ]
  },
  "firestore": {
    "/admins/{adminId}": {
      "schema": {
        "$ref": "#/entities/AdminUser"
      },
      "description": "Stores documents mapping admin usernames to their auth emails."
    },
    "/bookings/{bookingId}": {
      "schema": {
        "$ref": "#/entities/Booking"
      },
      "description": "Stores all booking documents for the accommodation."
    }
  }
}
