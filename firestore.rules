
rules_version = '2';
service cloud.firestore {
  match /databases/{database}/documents {
    
    // Admins collection can only be read. No one can write to it from the client.
    match /admins/{adminId} {
      allow read: if true;
      allow write: if false;
    }

    // Bookings can be read by anyone.
    // New bookings can be created by anyone (customers).
    // Existing bookings can only be modified or deleted by an authenticated user (the owner).
    match /bookings/{bookingId} {
      allow read: if true;
      allow create: if true;
      allow update, delete: if request.auth != null;
    }

    // Helper Functions
    function isSignedIn() {
      return request.auth != null;
    }
  }
}
