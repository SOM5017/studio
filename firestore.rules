rules_version = '2';

service cloud.firestore {
  match /databases/{database}/documents {
    
    // Helper function to check if the user is signed in.
    function isSignedIn() {
      return request.auth != null;
    }

    // Rules for the 'bookings' collection
    match /bookings/{bookingId} {
      // Anyone can create a booking, as this is a public-facing action.
      // We rely on AI for fraud detection post-creation.
      allow create: if true;

      // Any signed-in user (implying an admin/owner in this app's context)
      // can read, update, or delete any booking.
      // In a multi-tenant app, this would be restricted to the owner of the accommodation.
      allow read, update, delete: if isSignedIn();
      
      // Public listing of all bookings is disallowed for security.
      allow list: if false;
    }
  }
}
