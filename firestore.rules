
rules_version = '2';
service cloud.firestore {
  match /databases/{database}/documents {
    
    // Bookings can be read by anyone, but only modified by an authenticated user (the owner).
    match /bookings/{bookingId} {
      allow read: if true;
      allow write: if request.auth != null;
    }

    // Helper Functions
    function isSignedIn() {
      return request.auth != null;
    }
  }
}
