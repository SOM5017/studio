rules_version = '2';

service cloud.firestore {
  match /databases/{database}/documents {
    
    // Helper function to check if the user is signed in.
    function isSignedIn() {
      return request.auth != null;
    }

    // Rules for the 'bookings' collection
    match /bookings/{bookingId} {
      // Anyone can create a booking, as this is a public-facing action.
      allow create: if true;

      // Only signed-in admins can read, update, or delete a specific booking's details.
      allow read, update, delete: if isSignedIn();
      
      // Allow public listing of bookings for the calendar to check for availability,
      // but do not allow reading the full documents without authentication.
      allow list: if true;
    }
  }
}
